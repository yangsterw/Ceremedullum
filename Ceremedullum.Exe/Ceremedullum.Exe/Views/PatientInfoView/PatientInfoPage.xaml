<Page
    x:Class="Ceremedullum.Exe.Views.PatientInfoView.PatientInfoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Ceremedullum.Exe.Views.PatientInfoView"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <TextBox x:Name="PatientId" Header="Patient ID:" HorizontalAlignment="Left" Margin="40,41,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Height="71" Width="238" FontSize="18"/>
        <TextBox x:Name="Sex" Header="Sex:" HorizontalAlignment="Left" Margin="278,41,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Height="71" Width="238" FontSize="18"/>
        <TextBox x:Name="BirthYear" Header="Age:" HorizontalAlignment="Left" Margin="512,41,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Height="71" Width="238" FontSize="18"/>
        <controls:DataGrid Margin="40,144,266,42" x:Name="PatientRecord" AutoGenerateColumns="True">
            <controls:DataGrid.Columns>
                <controls:DataGridTextColumn/>
                <controls:DataGridComboBoxColumn/>
            </controls:DataGrid.Columns>
        </controls:DataGrid>
    </Grid>
</Page>
